<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.



    -->
    <style name="AppBaseTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.



        -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Default" parent="@android:style/Theme"></style>

    <style name="Theme.NoTitle" parent="@android:style/Theme.NoTitleBar"></style>

    <style name="Theme.FullScreen" parent="@android:style/Theme.NoTitleBar.Fullscreen"></style>

    <style name="mytheme" parent="@android:style/Theme.NoTitleBar.Fullscreen"></style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/prop_theme_color</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Myactionbar</item>
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Myactionbar</item>

        <!-- Support library compatibility -->
        <item name="background">@color/prop_theme_color</item>
        <item name="displayOptions">useLogo|showHome</item>
    </style>

    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="PropButtonStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/prop_textstyle</item>
    </style>

    <style name="PropButtonStyleInverse">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">@color/prop_theme_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">5pt</item>
        <item name="android:background">@drawable/prop_textstyle_inverse</item>
        <item name="android:shadowColor">#70ff106d</item>
    </style>

    <style name="PropTextViewMore">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/prop_theme_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">more..</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_margin">3dp</item>
    </style>

</resources>