<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- API 11 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/Theme.Myactionbar.Widget</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/Theme.Myactionbar.Widget</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <item name="android:windowContentOverlay">@null</item>

    </style>
    <style name="Theme.Default" parent="@android:style/Theme.Holo"></style>
    <style name="Theme.NoTitle" parent="@android:style/Theme.Holo.NoActionBar"></style>
    <style name="Theme.FullScreen" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen"></style>
    <style name="mytheme" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen"></style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/prop_theme_color</item>
        <item name="android:displayOptions">useLogo|showHome</item>
        <!-- Support library compatibility -->
        <item name="background">@color/prop_theme_color</item>
        <item name="displayOptions">useLogo|showHome</item>
    </style>
    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
